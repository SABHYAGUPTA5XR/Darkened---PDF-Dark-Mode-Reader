{
  "manifest_version": 3,
  "name": "Darken - PDF Dark Mode Reader",
  "version": "1.0",
  "description": "Applies dark mode and other themes to PDFs.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file:///*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*.pdf",
        "https://*/*.pdf",
        "file:///*/*.pdf"
      ],
      "js": ["content.js"]
    }
  ]
}